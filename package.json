{
  "name": "sih-safety-platform",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": ["apps/*", "packages/*"],
  "engines": { "node": ">=20.0.0" },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "codegen": "turbo run codegen",
    "api:start": "pnpm --filter @sih/api-gateway dev",
    "api:build": "pnpm --filter @sih/api-gateway build",
    "api:serve": "pnpm --filter @sih/api-gateway start",
    "web:dev": "pnpm --filter @sih/web dev",
    "web:build": "pnpm --filter @sih/web build",
    "web:start": "pnpm --filter @sih/web start",
    "demo": "turbo run dev --parallel --filter=@sih/api-gateway --filter=@sih/web"
  },
  "devDependencies": {
    "eslint": "8.57.0",
    "prettier": "^3.2.5",
    "turbo": "^2.0.0"
  }
}