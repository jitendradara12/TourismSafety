{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint": {},
		"typecheck": {},
		"codegen": {
			"outputs": ["packages/shared/src/**", "docs/api-specs.md"]
		}
	}
}

